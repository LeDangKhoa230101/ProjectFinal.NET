@model ProjectFinal.NET.Models.CartModel

<a asp-action="Cart" asp-controller="Cart" class="dropdown-toggle" style="display: inline-block;
                                                                        color: #fff;
                                                                        width: 90px;
                                                                        text-align: center;
                                                                        position: relative;">
    <i class="fa fa-shopping-cart" style="display: block; font-size: 18px;"></i>
    <span>Your Cart</span>
    <div class="qty" style="position: absolute;
                                                                right: 15px;
                                                                top: -10px;
                                                                width: 20px;
                                                                height: 20px;
                                                                line-height: 20px;
                                                                text-align: center;
                                                                border-radius: 50%;
                                                                font-size: 10px;
                                                                color: #FFF;
                                                                background-color: #D10024;">
        @Model?.Widget
    </div>
</a>