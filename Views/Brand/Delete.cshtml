@model ProjectFinal.NET.Data.Brand

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="padding: 0 16px 30px 16px;">
    <h1 style="font-size: 26px;">Delete</h1>
    <hr />
    <dl class="row">
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdBrand)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdBrand)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BrandName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BrandName)
            </dd>
        </div>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdBrand" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="BrandManager" style="font-size: 18px;color: red;">Back to Manager</a>
    </form>
</div>

