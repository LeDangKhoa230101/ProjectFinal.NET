@model IEnumerable<ProjectFinal.NET.Data.Product>

@{
    ViewData["Title"] = "ProductManager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="padding: 0 16px;">
    <h2>Product Manager</h2>

    <p>
        <a asp-action="Create" style="text-decoration: none;font-size: 20px;color: blue;">Create New</a>
    </p>

    <table class="table" style="width: 100%;">
        <thead>
            <tr>
                <th style="text-align: left; margin-right: 44px; border-bottom: 2px solid red;">
                    @Html.DisplayNameFor(model => model.NameProduct)
                </th>
                <th style="text-align: left; margin-right: 44px; border-bottom: 2px solid red;">
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th style="text-align: left; margin-right: 44px; border-bottom: 2px solid red;">
                    @Html.DisplayNameFor(model => model.PriceNew)
                </th>
                <th style="text-align: left; margin-right: 44px; border-bottom: 2px solid red;">
                    @Html.DisplayNameFor(model => model.PriceOld)
                </th>
                <th style="text-align: left; margin-right: 44px; border-bottom: 2px solid red;">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th style="border-bottom: 2px solid red;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameProduct)
                    </td>
                    <td>
                        <img src="@item.Image" style="width: 70px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceNew) VNĐ
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceOld) VNĐ
                    </td>
                    <td style="max-width: 480px;
                                overflow: hidden;
                                height: 24px;
                                line-height: 20px;
                                display: -webkit-box;
                                margin-top: 26px;">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProduct">Edit</a> |
                        <a asp-action="DetailManager" asp-route-id="@item.IdProduct">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdProduct">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>