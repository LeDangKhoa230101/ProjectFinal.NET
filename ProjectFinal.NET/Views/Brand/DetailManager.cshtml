@model ProjectFinal.NET.Data.Brand

@{
    ViewData["Title"] = "DetailManager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="padding: 0 16px 30px 16px;">
    <h4 style="font-size: 26px;">Brand Detail</h4>
    <hr />
    <dl class="row">
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdBrand)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.IdBrand)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BrandName)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.BrandName)
            </dd>
        </div>
    </dl>
</div>
<div style="padding: 0 16px 30px 16px;">
    <a asp-action="BrandManager" style="font-size: 18px;color: red;">Back to Manager</a>
</div>