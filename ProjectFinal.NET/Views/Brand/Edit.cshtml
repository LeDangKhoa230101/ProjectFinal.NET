@model ProjectFinal.NET.Data.Brand

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="padding: 0 16px 30px 16px;">
    <h2>Brand Edit</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdBrand" />
                <div class="form-group" style="display:flex;align-items: center;margin-bottom: 12px;">
                    <label asp-for="IdBrand" class="control-label" style="min-width: 120px;"></label>
                    <input asp-for="IdBrand" class="form-control" style="width: 42%; pointer-events: none;" />
                    <span asp-validation-for="IdBrand" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:flex;align-items: center;margin-bottom: 12px;">
                    <label asp-for="BrandName" class="control-label" style="min-width: 120px;"></label>
                    <input asp-for="BrandName" class="form-control" style="width: 42%;" />
                    <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin: 20px 0;">
                    <input type="submit" value="Save" class="btn btn-primary"
                           style="font-size: 17px;padding: 2px 20px;border-color: blue;color: blue;cursor: pointer;" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="BrandManager" style="font-size: 18px;color: red;">Back to Manager</a>
    </div>
</div>
