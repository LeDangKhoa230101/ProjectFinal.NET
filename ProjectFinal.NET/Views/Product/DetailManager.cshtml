@model ProjectFinal.NET.Data.Product

@{
    ViewData["Title"] = "DetailManager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="padding: 0 16px 30px 16px;">
    <h4 style="font-size: 26px;">Product Detail</h4>
    <hr />
    <dl class="row">
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NameProduct)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.NameProduct)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                <img src="@Model.Image" style="width: 80px;" />
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PriceNew)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.PriceNew) VNĐ
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PriceOld)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.PriceOld) VNĐ
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdBrand)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.IdBrand)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdCate)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.IdCate)
            </dd>
        </div>
    </dl>
</div>
<div style="padding: 0 16px 30px 16px;">
    <a asp-action="ProductManager" style="font-size: 18px;color: red;">Back to Manager</a>
</div>