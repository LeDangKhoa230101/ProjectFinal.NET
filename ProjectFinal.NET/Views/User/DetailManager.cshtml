@model ProjectFinal.NET.Data.User

@{
    ViewData["Title"] = "DetailManager";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="padding: 0 16px 30px 16px;">
    <h4 style="font-size: 26px;">User Detail</h4>
    <hr />
    <dl class="row">
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.UserId)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.Password)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </div>
        <div class="kol">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsAdmin)
            </dt>
            <dd class="col-sm-10" style="display: inline;">
                @Html.DisplayFor(model => model.IsAdmin)
            </dd>
        </div>
    </dl>
</div>
<div style="padding: 0 16px 30px 16px;">
    <a asp-action="UserManager" style="font-size: 18px;color: red;">Back to Manager</a>
</div>